generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id        String   @id @default(uuid()) @map("id") 
  name      String
  xin       String
  reports   Report[]
  createdAt DateTime @default(now()) @map("created_at")

  @@map("organizations")
}

model Report {
  id             String       @id @default(uuid()) @map("id") 
  date           DateTime     @map("date")
  cashBalance    Int          @map("cash_balance")
  status         ReportStatus @map("status") @default(IMPORT)

  organization   Organization @relation(fields: [organizationId], references: [id])
  organizationId String       @map("organization_id")

  bankDocuments  BankDocument[]

  createdAt      DateTime     @default(now()) @map("created_at")

  @@map("reports")
}

enum ReportStatus {
  IMPORT
  SALES
  INCOME
  EXPENSES
  DONE
}

model BankDocument {
  id           String     @id @default(uuid()) @map("id") 
  name         String
  balance      Int        @map("balance")

  report       Report     @relation(fields: [reportId], references: [id])
  reportId     String     @map("report_id")

  type         BankType   @relation(fields: [typeId], references: [id])
  typeId       String     @map("type_id")

  transactions BankTransaction[]

  createdAt    DateTime @default(now()) @map("created_at")

  @@map("bank_documents")
}

model BankType {
  id        String   @id @default(uuid()) @map("id") 
  name      String
  meta      Json

  documents BankDocument[]

  createdAt DateTime @default(now()) @map("created_at")

  @@map("bank_types")
}

model BankTransaction {
  id         String          @id @default(uuid()) @map("id") 
  amount     Int             @map("amount")
  date       DateTime        @map("date")

  document   BankDocument    @relation(fields: [documentId], references: [id])
  documentId String          @map("document_id")

  type       TransactionType @relation(fields: [typeId], references: [id])
  typeId     String          @map("type_id")

  createdAt  DateTime        @default(now()) @map("created_at")

  @@map("bank_transactions")
}

model TransactionType {
  id           String              @id @default(uuid()) @map("id") 
  name         String

  category     TransactionCategory @map("category") @default(ADMISSION)

  transactions BankTransaction[]

  createdAt    DateTime            @default(now()) @map("created_at")

  @@map("transaction_types")
}

enum TransactionCategory {
  ADMISSION
  EXPENSES
}
