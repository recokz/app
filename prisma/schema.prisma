generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id        String   @id @default(uuid()) @map("id")
  name      String
  xin       String
  reports   Report[]
  createdAt DateTime @default(now()) @map("created_at")

  @@map("organizations")
}

model Report {
  id          String       @id @default(uuid()) @map("id")
  date        DateTime     @map("date")
  cashBalance Int          @map("cash_balance")
  status      ReportStatus @default(IMPORT) @map("status")

  organization   Organization @relation(fields: [organizationId], references: [id])
  organizationId String       @map("organization_id")

  bankDocuments BankDocument[]
  crmDocuments  CrmDocument[]

  createdAt DateTime @default(now()) @map("created_at")

  @@map("reports")
}

enum ReportStatus {
  IMPORT
  SALES
  INCOME
  EXPENSES
  DONE
}

model BankDocument {
  id      String @id @default(uuid()) @map("id")
  name    String
  balance Int    @map("balance")

  report   Report @relation(fields: [reportId], references: [id])
  reportId String @map("report_id")

  type BankType @default(KASPI) @map("type")

  transactions Transaction[]

  createdAt DateTime @default(now()) @map("created_at")

  @@map("bank_documents")
}

enum BankType {
  KASPI
  HALYK
}

model CrmDocument {
  id   String @id @default(uuid()) @map("id")
  name String

  report   Report @relation(fields: [reportId], references: [id])
  reportId String @map("report_id")

  type CrmType @default(MOYSKLAD) @map("type")

  transactions Transaction[]

  createdAt DateTime @default(now()) @map("created_at")

  @@map("crm_documents")
}

enum CrmType {
  MOYSKLAD
}

model Transaction {
  id     String   @id @default(uuid()) @map("id")
  amount Int      @map("amount")
  date   DateTime @map("date")

  bankDocument   BankDocument? @relation(fields: [bankDocumentId], references: [id])
  bankDocumentId String?       @map("bank_document_id")

  crmDocument   CrmDocument? @relation(fields: [crmDocumentId], references: [id])
  crmDocumentId String?      @map("crm_document_id")

  type   TransactionType? @relation(fields: [typeId], references: [id])
  typeId String?          @map("type_id")

  createdAt DateTime @default(now()) @map("created_at")

  @@map("transactions")
}

model TransactionType {
  id   String @id @default(uuid()) @map("id")
  name String

  category TransactionCategory @default(ADMISSION) @map("category")

  transactions Transaction[]

  createdAt DateTime @default(now()) @map("created_at")

  @@map("transaction_types")
}

enum TransactionCategory {
  ADMISSION
  EXPENSES
}
